<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.quizapp.TrueFalse_Question3"
    android:background="@drawable/dd">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:padding="30dp"
            android:text="TRUE/FALSE"
            android:textSize="50sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:padding="10dp"
            android:textStyle="bold"

            android:text="3. THE CAPITAL CITY OF INDIA IS DELHI"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/btn_TRUE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClicktru"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:background="@android:color/holo_blue_bright"
            android:text="TRUE" />

        <Button
            android:id="@+id/btn_FALSE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickfls"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:background="@android:color/holo_blue_bright"
            android:text="FALSE" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="32dp"
            android:onClick="back"
            android:id="@+id/back"
            android:background="@android:color/holo_blue_bright"
            android:text="QUIT"
            android:textStyle="bold"/>





    </LinearLayout>


</RelativeLayout>
